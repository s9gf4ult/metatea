%html
  %head
    %title Metatea
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .header
      = yield :header
    .left-panel
      .left-panel-element
        %div
          = link_to teas_path do
            = t :all_categories

        = hash_links_tree SETTINGS[:tea][:categories], "20px"

      = yield :left_panel
    .content
      = yield
