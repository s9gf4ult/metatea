!!!
%html
  %head
    %title Metatea
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      .span-24
        = render :partial => "layouts/header"

      .span-4
        %div= render :partial => "layouts/categories"

        - if user_signed_in?
          %div= render :partial => "layouts/user_lists"

        = yield :left_panel

      .span-20.last
        = yield

      .span-24.last
        = yield :footer
