%p#notice= notice

%h2 #{@tea.name}

.span-8
  %div= t :tea_category_is, :category => @tea.category
  %div= t :tea_collection_date_is, :date => @tea.collection_date if @tea.collection_date
  %div= t :tea_factory_is, :factory => @tea.factory if @tea.factory
  %div= t :tea_added_by, :user => @tea.user.email

- if user_signed_in? && @tea.user == current_user
  .span-8
    %div
      = link_to @tea, :method => :delete, :confirm => t(:confirm_remove_tea) do
        = t :remove_tea
    %div
      = link_to edit_tea_path(@tea) do
        = t :edit_tea

.clearfix

- if user_signed_in?
  = render :partial => "user_block", :locals => {:tea => @tea}

.clearfix

.span-18.last.show-tea-block
  %div= render :partial => "tea_pictures", :locals => {:tea => @tea}

.clearfix

.span-18.last.show-tea-block
  %div
    - @tea.tea_links.each do |link|
      = link_to link.link, link.link

.clearfix

.span-18.last.show-tea-block
  %div
    %div
      = link_to new_tea_picture_path("tea[id]" => @tea.id) do
        = t :attach_tea_picture

    %div
      = link_to new_tea_link_path("tea[id]" => @tea.id) do
        = t :attach_tea_link


- if user_signed_in?
  .clearfix
  .span-18.last.show-tea-block
    %div= render :partial => "comment_form", :locals => {:comment => @comment}

.clearfix

.span-18.last.show-tea-block
  %div= render :partial => "comments_list", :locals => {:tea => @tea}

.clearfix
