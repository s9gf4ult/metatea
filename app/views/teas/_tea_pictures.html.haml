- pics = tea.tea_pictures.all
- pic = pics.first
- if pic
  .big_tea_picture.left
    = link_to pic do
      = image_tag pic.picture.url(:big)
  %article.readable-text= simple_format tea.description

  .clearfix
  - pics[1..pics.length].each do |pic|
    .medium_tea_picture
      = link_to pic do
        = image_tag pic.picture.url(:medium)
